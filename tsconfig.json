{
   "compilerOptions": {
      "lib": ["es2022"],
      "module": "CommonJS",
      "target": "es2022",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "dist", 
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true, 
      "resolveJsonModule": true,
      "skipLibCheck": true, 
      "forceConsistentCasingInFileNames": true 
   }
}